{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/shared/components/*"],
      "@libs/*": ["src/shared/libs/*"],
      "@interfaces/*": ["src/shared/interfaces/*"],
      "@enums/*": ["src/shared/enums/*"]
    }
  }
}
